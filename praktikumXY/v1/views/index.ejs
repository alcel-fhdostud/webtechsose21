<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <title>Podcasts Main</title>
    <link rel="stylesheet" href="./css/flexbox.css" />
    <link rel="stylesheet" href="./css/style.css" />
    <link rel="stylesheet" id="kachelAnsichtCSS" href="./css/index.css" />
  </head>

  <body>
    <%- include("header.ejs") %>
    <div id="mainundaside">
      <main>
        <form
          action="https://labs.inf.fh-dortmund.de/podcastService/testPodcastSearch.php"
          method="GET"
        >
          Titel
          <input
            name="pctitle"
            maxlength="100"
            placeholder="ðŸ”ŽSuchbegriff eingeben"
            pattern="^[A-Z]{1}[A-Za-z0-9\s]$+"
          />
          <input type="submit" value="Finden" />
        </form>
        <a class="button" id="btnListenAnsicht" onclick="switchAnsicht(this)"
          >Zur Listenansicht</a
        >
        <a class="button" id="btnKachelAnsicht" onclick="switchAnsicht(this)"
          >Zur Kachelansicht</a
        >
        <!--Praktikum 9-->
        <div id="listenAnsichtHTML">
          <ul id="mainul">
            <% for(let p of podcasts){ %>
            <li>
              <a href="./podcast?pc=<%=podcasts.indexOf(p);%>"
                ><%= p.titel %></a
              >
              - <%= p.episoden.length %> Episoden
            </li>
            <% } %>
          </ul>
        </div>
        <div id="kachelAnsichtHTML">
          <% for(let p of podcasts){ %>
          <a href="./podcast?pc=<%=podcasts.indexOf(p);%>">
            <img
              class="doggo"
              src="<%= p.bildURL %>"
              width="200"
              height="200"
              alt="Doge Bild"
            />
            <div id="text"><%= p.titel %></div>
          </a>
          <% } %>
        </div>
        <form method="POST" action="/abonnieren">
          <fieldset>
            <label>
              Titel
              <input
                name="aboBtn"
                maxlength="100"
                placeholder="URL eingeben"
                required
            /></label>
            <input type="submit" />
          </fieldset>
        </form>
      </main>
      <aside>
        <h2>Neueste Episoden</h2>
        <ul>
          <li>Heute: Deins</li>
          <li>Gestern: Du</li>
        </ul>
      </aside>
    </div>
    <%- include("footer.ejs") %>
    <script src="./js/script.js"></script>
    <script src="./js/index.js"></script>
  </body>
</html>
